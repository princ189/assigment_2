#include <stdio.h>

int main() {
    int arr[10], n, value, i, found = 0;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    printf("Enter value to search: ");
    scanf("%d", &value);

    for(i = 0; i < n; i++) {
        if(arr[i] == value) {
            printf("Value found at position %d\n", i);
            found = 1;
        }
    }

    if(!found)
        printf("Value not found!\n");

    return 0;
}
