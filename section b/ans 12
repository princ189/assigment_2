#include <stdio.h>
#include <ctype.h>

int main() {
    char str[100];
    int i, a=0, e=0, iCount=0, o=0, u=0;

    printf("Enter a string: ");
    gets(str);

    for(i = 0; str[i] != '\0'; i++) {
        char ch = tolower(str[i]);
        if(ch == 'a') a++;
        else if(ch == 'e') e++;
        else if(ch == 'i') iCount++;
        else if(ch == 'o') o++;
        else if(ch == 'u') u++;
    }

    printf("\nFrequency of vowels:\n");
    printf("A/a = %d\n", a);
    printf("E/e = %d\n", e);
    printf("I/i = %d\n", iCount);
    printf("O/o = %d\n", o);
    printf("U/u = %d\n", u);

    return 0;
}
